{% if use_journalctl %}
# combined query for all mail things on journald system, effectively
# what would be in mail.log
# 2025-06-04 - Removed *ApplyStdDate
LogFile =
LogFile = /dev/null

*JournalCtl = "--no-pager -u dovecot -u postfix@-"
{% else %}
# builtin config assumes num, add dateext rotation
LogFile =
LogFile = mail.log
LogFile = mail.log.1
LogFile = mail.log-*

Archive =
Archive = mail.log.*.gz
Archive = mail.log-*.gz
{% endif %}
